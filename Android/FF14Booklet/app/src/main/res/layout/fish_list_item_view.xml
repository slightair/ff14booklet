<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:columnCount="5"
    android:rowCount="2"
    android:paddingLeft="@dimen/fish_list_horizontal_padding"
    android:paddingRight="@dimen/fish_list_horizontal_padding"
    android:paddingTop="@dimen/fish_list_vertical_padding"
    android:paddingBottom="@dimen/fish_list_vertical_padding">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/thumbnail_view"
        android:layout_row="0"
        android:layout_column="0"
        android:contentDescription="@string/thumbnail_description"
        android:minHeight="@dimen/thumbnail_size"
        android:minWidth="@dimen/thumbnail_size"
        android:maxHeight="@dimen/thumbnail_size"
        android:maxWidth="@dimen/thumbnail_size"
        android:layout_rowSpan="2"
        android:layout_gravity="center_vertical|right" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/name_view"
        android:layout_row="0"
        android:layout_column="1"
        android:text="name"
        android:layout_columnSpan="3"
        android:layout_marginLeft="@dimen/fish_list_item_horizontal_margin"
        android:layout_marginRight="@dimen/fish_list_item_horizontal_margin" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="4"
        android:layout_gravity="center_vertical|right"
        android:layout_rowSpan="2">

        <ToggleButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/complete_button"
            android:layout_gravity="center_vertical|right"
            android:maxWidth="@dimen/button_size"
            android:minHeight="@dimen/button_size"
            android:minWidth="@dimen/button_size"
            android:maxHeight="@dimen/button_size" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="link"
            android:id="@+id/link_button"
            android:layout_gravity="center_vertical|right"
            android:maxHeight="@dimen/button_size"
            android:maxWidth="@dimen/button_size"
            android:minHeight="@dimen/button_size"
            android:minWidth="@dimen/button_size" />

        </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/item_level_view"
        android:layout_row="1"
        android:layout_column="1"
        android:text="item level"
        android:layout_marginRight="@dimen/fish_list_item_horizontal_margin"
        android:layout_marginLeft="@dimen/fish_list_item_horizontal_margin" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="patch"
        android:id="@+id/patch_view"
        android:layout_row="1"
        android:layout_column="3"
        android:layout_marginLeft="@dimen/fish_list_item_horizontal_margin"
        android:layout_marginRight="@dimen/fish_list_item_horizontal_margin" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="type"
        android:id="@+id/type_view"
        android:layout_row="1"
        android:layout_column="2"
        android:layout_marginLeft="@dimen/fish_list_item_horizontal_margin"
        android:layout_marginRight="@dimen/fish_list_item_horizontal_margin" />

</GridLayout>